
{{>adminheader}}
<h2 class="text-center">Coupons</h2>
    <div class="d-flex justify-content-end mb-3">
        <a href="/admin/addCouponss" class="btn btn-success">Add Product</a>
    </div>
    <table id="couponTable" class="table table-bordered">
        <thead>
            <tr>
                <th>COUPON CODE</th>
                <th>DISCOUNT</th>
                <th>STATUS</th>
                
                <th>START</th>
                <th>EXPIRY</th>
                <th>CREATED</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            
            {{#each products}}
            <tr>
                <td>{{this.productName}}</td>
                <td>{{this.category.name}}</td>
                <td>{{this.regularPrice}}</td>
                <td>{{this.productDesc}}</td>
                <td>{{this.quantity}}</td>
                {{!-- //<td>{{this.productImage}}</td> --}}
                <td>
                    <a href="/admin/editProduct/{{this._id}}" class="btn btn-primary btn-sm">Edit</a>
<form action="/admin/deleteProduct/{{this._id}}" method="POST" style="display:inline-block;">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
                </form>                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="4" class="text-center">No Coupons Found</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
   <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function() {
        // Initialize DataTables
        $('#couponTable').DataTable({
             searching: false,  // Enable the built-in search box
        paging: true,     // Enable pagination
        lengthChange: false,
        pageLength:5
        });
        
    });
</script>