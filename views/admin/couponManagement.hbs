
{{>adminheader}}
<h2 class="text-center">Coupons</h2>
    <div class="d-flex justify-content-end mb-3">
        <a href="/admin/addCoupons" class="btn btn-success">Add Coupons</a>
    </div>
    <table id="couponTable" class="table table-striped table table-hover table-bordered">
        <thead>
            <tr>
                <th class="text-center">COUPON CODE</th>
                <th class="text-center">DISCOUNT</th>
                <th class="text-center">MINIMUM PRICE</th>
                
                
                <th class="text-center">START</th>
                <th class="text-center">EXPIRY</th>
                {{!-- <th>CREATED</th> --}}
                <th class="text-center">STATUS</th>
                
                <th class="text-center" >Actions</th>
            </tr>
        </thead>
        <tbody>
            
            {{#each coupons}}
            <tr>
                <td class="text-center">{{this.name}}</td>
                <td class="text-center">{{this.offerPrice}}</td>
                <td class="text-center">{{this.minimumPrice}}</td>
                <td class="text-center">{{formatDate this.createdOn "DD MMMM YYYY"}}</td>
                <td class="text-center">{{formatDate this.expireOn "DD MMMM YYYY"}}</td>
                {{!-- //<td>{{this.productImage}}</td> --}}
                <td class="text-center">
                    {{#if (isActive this.expireOn)}}
                    <span class="badge bg-success">Active</span>
                    {{else}}
                    <span class="badge bg-danger">Expired</span>
                    {{/if}}
                </td>
                <td class="text-center">
                    <a href="/admin/editCoupon/{{this._id}}" class="btn btn-primary btn-sm">Edit</a>
<form action="/admin/deleteCoupon/{{this._id}}" method="POST" style="display:inline-block;">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to remove this coupon?')">Delete</button>
                </form>                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="4" class="text-center">No Coupons Found</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>


   <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function() {
        // Initialize DataTables
        $('#couponTable').DataTable({
             searching: false,  // Enable the built-in search box
        paging: true,     // Enable pagination
        lengthChange: false,
        pageLength:5,
         order: [[3, 'desc']],
          ordering: false 
        });
        
    });
</script>
