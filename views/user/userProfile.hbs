                           </tr>
                         </thead>
                         <tbody>
  {{#each orders}}
  <tr>
    <td>
      <ul>
        {{#each orderItems}}
        <li>&bull; {{this.product.productName}}</li>
        {{/each}}
      </ul>
    </td>
    <td>{{this.status}}</td>
    <td>{{this.totalPrice}}</td>
    <td>
      <a href="/user/cancelOrder/{{this._id}}" class="btn-small d-block">Cancel</a>
    </td>
  </tr>
  {{/each}}
</tbody>

                       </table>
                     </div>
                   </div>
                 </div>
