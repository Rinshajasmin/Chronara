               <div class="mb-3">
                   <input class="form-control" name="email" placeholder="Email" type="text" id="email">
                   <div class="error-message" id="email-error"></div>
               </div>
               <div class="mb-4">
                   <button type="submit" class="btn btn-primary w-100">Verify</button>
               </div>
           </form>
         
         
       </div>
   </div>
