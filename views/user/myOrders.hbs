<head>
    <title>Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .sidebar-container{
            display: flex;
        }
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
        .table .btn {
            margin-right: 5px;
        }
        .table ul {
            padding-left: 0;
            list-style-type: none;
        }
        .confirm-delete {
            color: red;
        }
        .table-responsive{
            margin-top: 49px;
        }
    </style>
</head>
<body>
       {{>userHeadernw}}
<div class="sidebar-container">
    {{>sidebar}}
    <div class="container">
        {{#if order.length}}
            <div class="table-responsive">
                <table id="orderTableUser" class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            {{!-- <th>Customer</th> --}}
                            <th>Items</th>
                            <th>Total Price</th>
                            <th>Status</th>
                            <th>Payment Method</th>
                            <th>Order Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each order}}
                            <tr>
                               <td>
                                    <ul>
                                        {{#each this.orderItems}}
                                            <li>
                                               &bull; {{this.product.productName}} 
                                            </li>
                                        {{/each}}
                                    </ul>
                                </td>
                                <td>â‚¹{{this.finalAmount}}</td>
                                
        <td class="{{statusClass this.status}}">{{this.status}}</td>

                                <td>{{this.paymentMethod}}</td>
                                <td>{{formatDate this.createdOn "YYYY-MM-DD"}}</td>
                                 <td>
                                    <a href="/user/orderDetails/{{this._id}}" class="btn btn-primary btn-sm">Details</a>
                                    
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{else}}
            <p class="text-center text-muted">No orders found.</p>
        {{/if}}
    </div>
    </div>
    {{>userfooter}}
</body>

<script type="text/javascript">
    $(document).ready(function() {
        $('#orderTableUser').DataTable({
             searching: false,  // Enable the built-in search box
        paging: true,     // Enable pagination
        lengthChange: false,
        pageLength:5,
        order:[[4,'desc']]
        });
        
    });
</script>

