    .password-container {
        display: flex;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: -2px;
        width: 100%;
        max-width: 400px; /* Adjust based on your layout */
    }

    .password-container input {
        flex: 1;
        border: none;
        outline: none;
        padding: 4px;
        font-size: 14px;
    }

    .password-container button {
        background: none;
        border: none;
        cursor: pointer;
        padding: 8px;
    }

    .password-container button i {
        font-size: 18px;
        color: #333;
    }
</style>
