
 
    
<main class="login-page">

  <div class="container">
    <div class="row">
      <!-- Image Section -->
      <div class="col-md-6">
        <div class="image-section">
          <img src="/images/278202db3dc8b2aa13c354510fead7d6.jpg" alt="Couple with Watches" class="img-fluid">
        </div>
      </div>
      
      <!-- Form Section -->
      <div class="col-md-6">
        <div class="form-section">
          <h2>Login</h2>
          <form action="/user/login" method="post" id="loginform" name="loginform">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" placeholder="username" required>


            <label for="password">Password</label>
             <div class="password-container">
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
            <button class="btn btn-outline-primary" type="button" onclick="togglePassword('password')">        <i class="fa-regular fa-eye"></i>
</button>
             {{#if message}}
             
             <div class="alert alert-danger alert-dismissible fade show" role="alert">
             <strong>Error!</strong> {{message}}
             <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
             </div>
             {{/if}}
             </div>

            <div class="actions">
              <a href="/user/forgotPassword" class="forgot-password">Forgot password?</a>
            </div>

            <button type="submit" class="login-button">Login</button>
            <div class="separator">
              <div class="line"></div>
              <p>OR</p>
              <div class="line"></div>
            </div>

            <a href="/user/auth/google" style="text-decoration: none;">
             <button type="button" class="google-button">
              <img src="/images/Google_Icons-09-512.webp" alt="Google">
              Continue with Google 
            </button></a>

            <p class="signup-link">Don't have an account? <a href="/user/usersignup" style="text-decoration: none;">Sign up now</a></p>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
<script>
  function togglePassword(fieldId){
    const field= document.getElementById(fieldId);
    field.type=field.type === 'password'?'text':'password';
     }

</script>
