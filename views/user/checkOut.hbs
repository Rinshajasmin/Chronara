 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
        <link rel="stylesheet" href="/css/user/home.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }


        .checkout-container {
            max-width: 1200px;
            margin: 50px auto;
            display: flex;
            gap: 20px;
            padding: 20px;
        }


        .section {
            flex: 1;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }


        h1, h2, h3 {
            margin: 0 0 20px;
            color: #333;
        }


        .address-section h2,
        .order-summary-section h2 {
            font-size: 1.5rem;
            color: #007BFF;
            margin-bottom: 10px;
        }


        .address-list {
            margin: 0;
            padding: 0;
        }


        .address-item {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 10px;
        }


        .address-item input[type="radio"] {
            width: 20px;
            height: 20px;
        }


        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }


        table th, table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }


        table th {
            background-color: #f4f4f4;
            font-weight: bold;
            color: #333;
        }


        table td {
            color: #555;
        }


        .total-price {
            font-weight: bold;
            margin-top: 20px;
            text-align: right;
        }


        label {
            font-weight: bold;
            display: block;
            margin: 10px 0 5px;
        }


        select, button {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            margin-top: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }


        button {
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }


        button:hover {
            background-color: #0056b3;
        }


        .add-address-btn {
            margin-top: 10px;
            background-color: #28a745;
        }


        .add-address-btn:hover {
            background-color: #1e7e34;
        }
    </style>
</head>
<body>
       
     <header id="header" class="navbar">
        <div class="logo">chronara</div>
        <nav>
            <ul class="nav-links">
                <li><a href="/user/home">Home</a></li>
                <li><a href="/user/contact">Contact</a></li>
                <li><a href="/user/about">About</a></li>

                {{!-- <li><a href="/user/cart/?id={{_id}}" >Cart</a></li> --}}
            </ul>
        </nav>
        
         {{#if username}}
         <div class="shopping-icon">
              <a href="/user/cart/?id={{_id}}" class="cart-icon">
              
                <i class="fas fa-shopping-cart"></i> <!-- Cart icon -->
              </a>
        <div class="dropdown">
          
          <a class="sign-in-link" href="#">  
            
                   <i class="fas fa-user-circle"></i> <!-- Profile icon -->


            {{username}}
          </a>
          <div class="dropdown-content">
            <a  href="/user/userProfile">Profile</a>
            <a  href="/user/logout">Logout</a>
          </div>
        </div>
        </div>
        
        {{else}}
        <div class="auth-links">
            <a href="/user/login">Login</a> | <a href="/user/usersignup">Signup</a>
        </div>
       {{/if}}  
 
    </header> 
    <div class="checkout-container">
        <!-- Address Section -->
        <div class="section address-section">
            <h2>Billing Information</h2>
            <form id="checkoutform" action="/user/placeOrder" method="POST">
                        <input type="hidden" name="cartId" value={{cartId}}>


                <label for="address">Select Address:</label>
                <div class="address-list">
                    {{#each addresses}}
                    {{#each this.address}}
                    <div class="address-item">
                        <input type="radio" id="address-{{this._id}}" name="address" value="{{this._id}}" required>
                        <label for="address-{{this._id}}">
                            <p><strong>{{this.name}}, {{this.city}}, {{this.state}}, {{this.pincode}}</strong></p>
                            <p>Landmark: {{this.landMark}}</p>
                            <p>Phone: {{this.phone}}</p>
                        </label>
                    </div>
                    {{/each}}
                    {{/each}}
                </div>
                
                <button type="button" class="add-address-btn" onclick="window.location.href='/user/addAddress';">Add New Address</button>
                <label for="paymentMethod">Payment Method:</label>
                <label for="paymentMethod">Choose a Payment Method:</label>
    <select name="paymentMethod" id="paymentMethod" required>
        <option value="" disabled selected>Select a payment method</option>
        <option value="Cards">Cards</option>
        <option value="UPI">UPI</option>
                <option value="Net Banking">Net Banking</option>

        <option value="Razorpay">Razorpay</option>
        <option value="Cash on Delivery">Cash on Delivery</option>
    </select>
            {{!-- </form> --}}
        </div>
        {{!-- <a href="/user/getPaymentPage" class="btn btn-primary">Pay with Razorpay</a> --}}



        <!-- Order Summary Section -->
        <div class="section order-summary-section">
            <h2>Order Summary</h2>
            <table>
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price </th>
                        <th>Total </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{productId.productName}}</td>
                        <td>{{quantity}}</td>
                        <td>{{price}}</td>
                        <td>{{totalPrice}}</td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="4">Subtotal:</td>
                    <td>₹{{grandTotal}}</td>
                </tr>
                
                <tr>
                    <td colspan="4">Shipping Rate:</td>
                    <td>free Shipping</td>
                </tr>
                <tr>
                    <td colspan="4"><strong>Total:</strong></td>
                    <td><strong>₹{{grandTotal}}</strong></td>
                </tr>
            </tfoot>
            </table>
                            <button type="submit">Confirm and Place Order</button>
               </form>
        </div>
        
    </div>
</body>
